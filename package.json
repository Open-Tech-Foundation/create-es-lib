    "lint": "eslint ."
  },
  "engines": {
    "node": ">=10"
  },
  "bin": {
    "create-node-lib": "cli.js"
  },
  "files": [
    "cli.js",
    "lib"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/open-tech-world/create-node-lib.git"
  },
  "keywords": [
    "node",
    "module",
    "lib",
    "library",
    "scaffold",
    "cli"
  ],
  "author": {
    "name": "Thanga Ganapathy",
    "email": "ganapathy888@gmail.com",
    "url": "https://ganapathy888.github.io"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/open-tech-world/create-node-lib/issues"
  },
  "homepage": "https://github.com/open-tech-world/create-node-lib#readme",
  "dependencies": {
    "camelcase": "^5.3.1",
    "chalk": "^2.4.2",
    "email-regex": "^3.0.0",
    "globby": "^9.2.0",
    "handlebars": "^4.1.2",
    "inquirer": "^6.3.1",
    "node-emoji": "^1.10.0",
    "ora": "^3.4.0",
    "validate-npm-package-name": "^3.0.0"
  },
  "devDependencies": {
    "eslint": "^5.16.0",
    "eslint-config-airbnb-base": "^13.1.0",
